<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
              android:layout_height="match_parent">
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:orientation="horizontal"
	>
		<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="100dp"
				android:layout_weight="1"
				android:background="#263823"
				android:layout_margin="5dp"
				android:id="@+id/wendu_view"
		>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="当前温度"
					android:textSize="20dp"
					android:gravity="clip_vertical"
					android:id="@+id/text_wendu"
			/>
			<TextView
					android:text="0"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_alignParentBottom="true"
					android:layout_alignParentEnd="true"
					android:layout_marginEnd="15dp"
					android:layout_marginBottom="18dp"
					android:background="@drawable/text_cire"
					android:gravity="center"
					android:id="@+id/textView9"/>
		</RelativeLayout>
		<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="100dp"
				android:layout_weight="1"
				android:background="#263823"
				android:layout_margin="5dp"
				android:id="@+id/Co2_view"
		>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="当前CO2"
					android:textSize="20dp"
					android:gravity="clip_vertical"
					android:id="@+id/text_eryang"
			/>
			<TextView
					android:text="0"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_alignParentBottom="true"
					android:layout_alignParentEnd="true"
					android:layout_marginEnd="14dp"
					android:background="@drawable/text_cire"
					android:gravity="center"
					android:layout_marginBottom="16dp"
					android:id="@+id/textView8"/>
		</RelativeLayout>
		<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="100dp"
				android:layout_weight="1"
				android:background="#263823"
				android:layout_margin="5dp"
				android:id="@+id/guang_view"
		>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="当前光照强度"
					android:textSize="20dp"
					android:gravity="clip_vertical"
					android:id="@+id/text_xpl"
			/>
			<TextView
					android:text="0"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_alignParentBottom="true"
					android:layout_alignParentEnd="true"
					android:layout_marginEnd="12dp"
					android:layout_marginBottom="14dp"
					android:background="@drawable/text_cire"
					android:gravity="center"
					android:id="@+id/textView7"/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
