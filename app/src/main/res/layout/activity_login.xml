<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/bg1"
		tools:context="com.example.qiu.demo2018.activity.LoginActivity"
>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:id="@+id/linearLayout">
		<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/text_login_num"
		android:background="@drawable/item_text_it"
		android:layout_margin="10dp"
		android:hint="请输入账号"
		android:lines="1"
		android:maxLength="11"
		android:singleLine="true"
		/>
		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/text_login_password"
				android:background="@drawable/item_text_it"
				android:layout_margin="10dp"
				android:hint="请输入密码"
				android:lines="1"
				android:inputType="textPassword"
				android:maxLength="10"
				android:singleLine="true"
		/>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
		        android:orientation="horizontal"
		>
			<CheckBox android:layout_width="0dp"
			          android:layout_height="wrap_content"
			          android:layout_weight="0.5"
			       android:layout_margin="5dp"
			          android:layout_gravity="center"
			          android:id="@+id/chk_is"
			/>
			<TextView android:layout_width="0dp"
			          android:layout_height="wrap_content"
			          android:layout_weight="3"
			          android:text="是否记住密码"
			          android:gravity="left|center"
			          android:layout_margin="10dp"
			          android:layout_gravity="center"
			         android:textColor="#000000"
			          android:textSize="15dp"
			/>
			<TextView android:layout_width="0dp"
			          android:layout_height="wrap_content"
			          android:layout_weight="4"
			          android:text="忘记密码"
			          android:gravity="right"
			          android:padding="20dp"
			          android:textColor="#000000"
			          android:textSize="15dp"
			          android:id="@+id/text_not_pssword"
			          
			/>
		</LinearLayout>
		<Button
				android:text="登录"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#87cefa"
				android:id="@+id/button_login"
				android:layout_margin="10dp"
				android:layout_below="@+id/text_login_password"
				android:layout_alignParentStart="true"
		  
		/>
	</LinearLayout>
</RelativeLayout>
